
<div class="container mx-auto  ">

  
  
<div class="  row header-profile" >
    

     <div class=" col">
   <h1 class="profile-h1">Mi Cuenta</h1>
    </div>
   <div class="col-md-4">

 <a href="/updateUser/{{id}}" class="btn btn-info btn-block"><i class="fas fa-user-edit"></i>Editar perfil</a>

   </div>
    </div>
    <div class="data">

        
  <div class=" data-profile">
 

<div class="profile">
      {{#each user}}

      <div class="avatar">
          <img src="uploads/{{this.avatar}}" alt="{{this.avatar}}">
      </div>
      
             

         
    <h2>{{this.nombre}} {{this.apellido}}</h2>

     



       {{/each}}
</div>


    

  </div>
 
        
 <table class="table table-primary mx-auto" style="width: 60%; margin-top:30px">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Dirección</th>
      <th scope="col">Telefóno</th>
     
    </tr>
  </thead>
  
  <tbody>
    
    <tr class="table-active">
      <td>{{#each user}}
        {{this.email}}
         {{/each}}
        </td>
          <td>{{#each user}}
        {{this.direccion}}
         {{/each}}
        </td>
        <td>{{#each user}}
        {{this.tel}}
         {{/each}}
        </td>
   
    </tr>
    </tbody>

   
    </table>
    
<div class="ordenes">
  {{#if pedidosU}}
  {{#each pedidosU}}
<div class="card text-white bg-secondary mb-3 mx-auto" >
  <div class="card-header">Número de pedido {{this.n_pedido}}</div>
  <div class="card-body">
<a href="/viewO/{{id}}" class="btn btn-info"><i class="fas fa-eye"></i> Detalles</a>
  <form action="/deleteO/{{id}}?_method=DELETE" style="float: right;" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit" class="btn btn-danger" ><i class="fas fa-trash"></i> Eliminar</button>
 
  </form>

  </div>

</div>
{{/each}}
{{else}}
<h3>No tiene pedidos </h3>

{{/if}}
</div>

</div>
